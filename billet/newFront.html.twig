{% extends 'baseFront.html.twig' %}

{% block title %}OneUrban | Ajouter un Billet{% endblock %}

{% block body %}
    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
        <h1 class="mb-3">| Ajouter un Billet</h1>
    </div>
    <div class="row g-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div style="margin-left:80px;width:1160px;" class="alert alert-{{ label }} alert-dismissable">
                    <button style="margin-left:1100px;" type="button" class="btn btn-danger btn-sm" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-ban"></i> Attention !</h4>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div align="center">
            {{ include('billet/_formFront.html.twig') }}
        </div>
    </div>
{% endblock %}
