{{ form_start(form,{'attr':{'novalidate':'novalidate'}},{'attr':{'class':'form-horizontal'}}) }}
    <div class="form-group">
        <div class="col col-md-3">
            <label>{{ form_label(form.date,"Date :") }}</label>
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.date,{'attr':{'class':'form-control'}})}}
            {% if form_errors(form.date) is not empty %}
                <div class="form-group has-error">
                    <label class="form-text text-muted">{{ form_errors(form.date) }}</label>
                </div>
            {% endif %}
        </div>
    </div>
    <br><br><br>
    <div class="form-group">
        <div class="col col-md-3">
            <label>{{ form_label(form.heure,"Heure :") }}</label>
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.heure,{'attr':{'class':'form-control'}})}}
            {% if form_errors(form.heure) is not empty %}
                <div class="form-group has-error">
                    <label class="form-text text-muted">{{ form_errors(form.heure) }}</label>
                </div>
            {% endif %}
        </div>
    </div>
    <br><br>
    <div class="form-group">
        <div class="col col-md-3">
            <label>{{ form_label(form.nomMedecin,"Nom Medecin :") }}</label>
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.nomMedecin,{'attr':{'class':'form-control'}})}}
                {% if form_errors(form.nomMedecin) is not empty %}
                    <div class="form-group has-error">
                        <label class="form-text text-muted">{{ form_errors(form.nomMedecin) }}</label>
                    </div>
                {% endif %}
        </div>
    </div>
    <br><br><br>
    <div align="center" class="card-footer">
        <button style="width:70px;" class="btn btn-block btn-primary btn-sm"><i class="zmdi zmdi-plus"></i>{{ button_label|default('Ajouter') }}</button>
        <button style="margin-top:1px;margin-left:10px;width:220px;" class="btn btn-block btn-info btn-sm"><a style="color:#fff;" href="{{ path('app_centremedicale_index_front') }}">Retour a la Liste des Centres</a></button>
    </div>
{{ form_end(form) }}
