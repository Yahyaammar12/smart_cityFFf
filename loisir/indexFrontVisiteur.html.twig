{% extends 'baseVisiteur.html.twig' %}

{% block title %}OneUrban | Liste des Loisirs{% endblock %}

{% block body %}

    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
        <h1 class="mb-3">| Liste des Loisirs</h1>
    </div>
    <div class="row g-4">
        {% for loisir in loisirs %}
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <a class="cat-item d-block bg-light text-center rounded p-3" href="#">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <i class="fa fa-book"></i>
                        </div>
                        <br>
                        <span><strong>Nom: </strong>{{ loisir.nom }} </span>
                        <br>
                        <span><strong>Type: </strong>{{ loisir.type }}</span>
                        <br>
                        <span><strong>Localisation: </strong>{{ loisir.localisation}}</span>
                        <br>
                        <span><strong>Horaire de Travail: </strong>{{ loisir.horaireTravail }}</span>
                        <a style="margin-left:25px;" class="btn btn-dark py-3 px-4" href="{{ path('app_evenement_new_front', {'id': loisir.id}) }}">Ajouter un Evenement</a>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
    <div style="margin-left:500px;" class="pagination">
        {% do loisirs.setPageRange(8) %}
        {{knp_pagination_render(loisirs, 'pagination.html.twig')}}
        <br><br><br><br><br>
    </div>
{% endblock %}