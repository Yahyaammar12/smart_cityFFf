{% extends 'baseBack.html.twig' %}

{% block title %}OneUrban | Dashboard | Liste des Réclamations{% endblock %}

{% block body %}
    <h1>| Liste des Réclamations</h1>
    <button style="margin-left:50px;width:150px;" class="btn btn-block btn-primary">
        <a style="color:#fff;" href="{{ path('app_reclamation_new') }}"><i class="fa fa-plus"></i> Créer une nouvelle</a>
    </button>
    <br>
    <div style="background-color:#fff;">
        <br>
        <input style="margin-left:80px;width:950px;" type="text" class="form-control" id="searchInput" placeholder="Search&hellip;">
        <br><br>
        <div style="margin-top:-135px;margin-left:1050px;" class="btn-group">
            <button type="button" id="actionBtn" class="btn btn-info">Tri Par</button>
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li><a href="{{ path('app_reclamation_index') }}" onclick="setActionText(this)">Défaut</a></li>
                <li class="divider"></li>
                <li><a href="{{ path('app_reclamation_index_sort_date') }}" onclick="setActionText(this)">Date</a></li>
                <li><a href="{{ path('app_reclamation_index_sort_sujet') }}" onclick="setActionText(this)">Sujet</a></li>
                <li><a href="{{ path('app_reclamation_index_sort_rating') }}" onclick="setActionText(this)">Rating</a></li>
                <li><a href="{{ path('app_reclamation_index_sort_solved') }}" onclick="setActionText(this)">Traitement</a></li>
            </ul>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Sujet</th>
                    <th>Description</th>
                    <th>Rating</th>
                    <th>Traitement</th>
                    <th>Tourisme</th>
                    <th>Utilisateur</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for reclamation in reclamations %}
                <tr>
                    <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
                    <td>{{ reclamation.sujet }}</td>
                    <td>{{ reclamation.description|slice(0, 70) ~ (reclamation.description|length > 70 ? '...' : '') }}</td>
                    <td>
                        {% for i in 1..5 %}
                            {% if i <= reclamation.rating %}
                                <i class="fa fa-star"></i>  <!-- Full star -->
                            {% else %}
                                <i class="fa fa-star-o"></i>  <!-- Empty star -->
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        {% if reclamation.solved == true %}
                            <span class="label label-success">Yes</span>
                        {% elseif reclamation.solved == false %}
                            <span class="label label-danger">No</span>
                        {% else %}
                            <span class="label label-warning">{{ reclamation.solved }}</span>
                        {% endif %}
                    </td>
                    <td>
                        <span class="label label-success">{{ tourismeNames[reclamation.tourismeId] ?? 'N/A' }}</span>
                    </td>
                    <td>{{ reclamation.user.prenom }} {{ reclamation.user.nom }}</td>
                    <td>
                        <button style="width:30px;" class="btn btn-block btn-info btn-sm"><a style="color:#fff;" href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}"><i class="fa fa-ellipsis-v"></i></a></button>
                        &nbsp;
                        <button style="margin-top:-50px;margin-left:35px;width:30px;" class="btn btn-block btn-success btn-sm"><a style="color:#fff;" href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}"><i class="fa fa-edit"></i></a></button>
                        &nbsp;
                        {{ include('reclamation/_delete_form.html.twig') }}
                        &nbsp;
                        {% if reclamation.solved == false %}
                            <button style="margin-top:-50px;margin-left:107px;width:30px;" class="btn btn-block btn-success btn-sm"><a style="color:#fff;" href="{{ path('app_reclamation_edit_traitement', {'id': reclamation.id}) }}"><i class="fa fa-check-circle"></i></a></button>
                        {% else %}
                            <button style="margin-top:-50px;margin-left:107px;width:30px;" class="btn btn-block btn-danger btn-sm"><a style="color:#fff;" href="{{ path('app_reclamation_edit_traitement', {'id': reclamation.id}) }}"><i class="fa fa-minus-circle"></i></a></button>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No Reclamations Found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


<script>
    function setActionText(element) {
        const actionBtn = document.getElementById("actionBtn");
        actionBtn.textContent = element.textContent;
    }
</script>


<script>
	function filterTable() {
        const filter = document.getElementById('searchInput').value.toUpperCase();
        const rows = document.querySelectorAll('table tr');
        for (let i = 1; i < rows.length; i++) {
            const cols = rows[i].querySelectorAll('td');
            let visible = false;
            for (let j = 0; j < cols.length; j++) {
                const cell = cols[j];
                if (cell.innerText.toUpperCase().indexOf(filter) > -1) {
                    visible = true;
                    break;
                }
            }
            rows[i].style.display = visible ? '' : 'none';
        }
    }
    document.getElementById('searchInput').addEventListener('keyup', filterTable);
</script>

{% endblock %}
